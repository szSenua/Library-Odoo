<?xml version="1.0" encoding="UTF-8"?>

<odoo>
    <!-- Library Book Form View -->
    <record id="library_book_view_form" model="ir.ui.view">
        <field name="name">library_book.view.form</field>
        <field name="model">library.book</field>
        <field name="arch" type="xml">
            <form string="">
                <header>
                    <field name="state" widget="statusbar"
                        statusbar_visible="available,loaned,overdue" />
                        <!-- Buttons to loan and return books -->
                    <button name="action_loan_book"
                        string="Loan"
                        type="object"
                        class="btn-primary"
                        invisible="state != 'available'" />
                    <button name="action_return_book"
                        string="Return"
                        type="object"
                        class="btn-success"
                        invisible="state == 'available'" />
                </header>
                <sheet>
                    <group>
                        <field name="name" />
                        <field name="author_id" />
                        <field name="release_date" />
                        <field name="isbn" />
                        <field name="summary" />
                        <field name="cover" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>


    <!--Library
    Book List View -->
    <record id="library_book_view_list" model="ir.ui.view">
        <field name="name">library_book.view.list</field>
        <field name="model">library.book</field>
        <field name="arch" type="xml">
            <list string="">
                <field name="name" />
                <field name="author_id" />
                <field name="release_date" />
                <field name="isbn" />
            </list>
        </field>
    </record>

    <!-- Action -->
    <record id="action_library_book" model="ir.actions.act_window">
        <field name="name">Books</field>
        <field name="res_model">library.book</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first book!
            </p>
        </field>
    </record>

</odoo>
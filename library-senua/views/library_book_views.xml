<?xml version="1.0" encoding="UTF-8"?>

<odoo>
    <!-- Library Book Form View -->
    <record id="library_book_view_form" model="ir.ui.view">
        <field name="name">library_book.view.form</field>
        <field name="model">library.book</field>
        <field name="arch" type="xml">
            <form string="">
                <header>
                    <field name="state" widget="statusbar"
                        statusbar_visible="available,loaned,overdue" />
                    <!-- Buttons to loan and return books -->
                    <button name="action_loan_book"
                        string="Loan"
                        type="object"
                        class="btn-primary"
                        invisible="state != 'available'" />
                    <button name="action_return_book"
                        string="Return"
                        type="object"
                        class="btn-success"
                        invisible="state == 'available'" />
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Book Title" />
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="author_id" />
                            <field name="release_date" />
                            <field name="isbn" />
                        </group>
                        <group>
                            <div style="text-align: right;">
                                <field name="cover" widget="image" nolabel="1"
                                    options="{'size': [150, 225]}" readonly="1" />
                            </div>
                        </group>
                    </group>
                    <notebook>
                        <page string="Summary">
                            <field name="summary" />
                        </page>
                        <page string="Loans">
                            <field name="loan_ids" readonly="1">
                                <list>
                                    <field name="borrower_id" />
                                    <field name="loan_date" />
                                    <field name="return_date" />
                                    <field name="state" />
                                    <field name="is_late" />
                                    <field name="days_late" />
                                </list>
                            </field>
                        </page>
                        <page string="Editions">
                            <field name="edition_ids">
                                <list editable="bottom">
                                    <field name="year" />
                                    <field name="copies" />
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>


    <!--Library
    Book List View -->
    <record id="library_book_view_list" model="ir.ui.view">
        <field name="name">library_book.view.list</field>
        <field name="model">library.book</field>
        <field name="arch" type="xml">
            <list string="">
                <field name="name" />
                <field name="author_id" />
                <field name="release_date" />
                <field name="isbn" />
            </list>
        </field>
    </record>

    <!-- Action -->
    <record id="action_library_book" model="ir.actions.act_window">
        <field name="name">Books</field>
        <field name="res_model">library.book</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first book!
            </p>
        </field>
    </record>

</odoo>
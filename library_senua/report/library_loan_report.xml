<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- Report Action -->
    <record id="action_report_library_loan" model="ir.actions.report">
        <field name="name">Loan Receipt</field>
        <field name="model">library.loan</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">library_senua.report_loan_receipt</field>
        <field name="report_file">library_senua.report_loan_receipt</field>
        <field name="binding_model_id" ref="model_library_loan" />
        <field name="binding_type">report</field>
    </record>

    <!-- Report Template -->
    <template id="report_loan_receipt">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="loan">
                <t t-call="web.external_layout">
                    <div class="page">
                        <h2 class="text-center">Loan Receipt / Resguardo de Préstamo</h2>
                        <div class="row mt32 mb32">
                            <div class="col-6">
                                <strong>Book / Libro:</strong>
                                <br />
                                <span t-field="loan.book_id.name" />
                            </div>
                            <div class="col-6">
                                <strong>ISBN:</strong>
                                <br />
                                <span t-field="loan.book_isbn" />
                            </div>
                        </div>
                        <div class="row mb32">
                            <div class="col-6">
                                <strong>Borrower / Prestatario:</strong>
                                <br />
                                <span t-field="loan.borrower_id.name" />
                            </div>
                            <div class="col-6">
                                <strong>Loan Date / Fecha de Préstamo:</strong>
                                <br />
                                <span t-field="loan.loan_date" />
                            </div>
                        </div>
                        <div class="row mb32" t-if="loan.notes">
                            <div class="col-12">
                                <strong>Notes / Observaciones:</strong>
                                <br />
                                <span t-field="loan.notes" />
                            </div>
                        </div>
                        <div class="row mt64">
                            <div class="col-12 text-center">
                                <p>
                                    <strong>Borrower Signature / Firma del Prestatario:</strong>
                                </p>
                                <div
                                    style="border-top: 1px solid black; margin-top: 80px; padding-top: 5px; width: 50%; margin-left: auto; margin-right: auto;">
                                    Signature / Firma
                                </div>
                            </div>
                        </div>
                    </div>
                </t>
            </t>
        </t>
    </template>

</odoo>
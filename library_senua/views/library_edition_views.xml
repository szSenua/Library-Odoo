<?xml version="1.0" encoding="UTF-8"?>

<odoo>
    <!-- Library Edition Form View -->
    <record id="view_library_edition_form" model="ir.ui.view">
        <field name="name">library.edition.form</field>
        <field name="model">library.edition</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="book_id"/>
                        <field name="year"/>
                        <field name="copies"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Library Edition List View -->
    <record id="view_library_edition_list" model="ir.ui.view">
        <field name="name">library.edition.list</field>
        <field name="model">library.edition</field>
        <field name="arch" type="xml">
            <list>
                <field name="book_id"/>
                <field name="year"/>
                <field name="copies"/>
            </list>
        </field>
    </record>

</odoo>